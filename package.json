{
  "name": "sencrop-developer-platform",
  "private": true,
  "description": "The Sencrop Developer Platform website",
  "version": "2.0.0",
  "author": "Paul Bottein <paul.bottein@gmail.com>",
  "keywords": [
    "gatsby"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/sencrop/sencrop-developer-platform"
  },
  "bugs": {
    "url": "https://github.com/sencrop/sencrop-developer-platform"
  },
  "scripts": {
    "build": "gatsby build",
    "develop": "gatsby develop",
    "format": "prettier --write src/**/*.{js,jsx}",
    "lint": "eslint 'src/**/*.js'",
    "prettier": "prettier --write 'src/**/*.js'",
    "start": "npm run develop"
  },
  "dependencies": {
    "@mdx-js/mdx": "^1.6.18",
    "@mdx-js/react": "^1.6.18",
    "@sencrop/ui-components": "^4.6.1",
    "formik": "^2.2.0",
    "gatsby": "^2.24.82",
    "gatsby-background-image": "^1.1.2",
    "gatsby-image": "^2.4.21",
    "gatsby-plugin-catch-links": "^2.3.15",
    "gatsby-plugin-manifest": "^2.4.35",
    "gatsby-plugin-mdx": "^1.2.48",
    "gatsby-plugin-netlify": "^2.3.21",
    "gatsby-plugin-offline": "^3.2.34",
    "gatsby-plugin-react-helmet": "^3.3.14",
    "gatsby-plugin-react-leaflet": "^2.0.13",
    "gatsby-plugin-sharp": "^2.6.43",
    "gatsby-plugin-styled-components": "^3.3.14",
    "gatsby-plugin-web-font-loader": "^1.0.4",
    "gatsby-remark-autolink-headers": "^2.3.15",
    "gatsby-remark-external-links": "0.0.4",
    "gatsby-remark-prismjs": "^3.5.16",
    "gatsby-source-filesystem": "^2.3.35",
    "gatsby-transformer-remark": "^2.8.43",
    "gatsby-transformer-sharp": "^2.5.18",
    "leaflet": "^1.7.1",
    "leaflet.markercluster": "^1.4.1",
    "lodash": "^4.17.20",
    "luxon": "^1.25.0",
    "prismjs": "^1.24.0",
    "prop-types": "^15.7.2",
    "react": "^16.14.0",
    "react-animate-height": "^2.0.23",
    "react-dom": "^16.14.0",
    "react-helmet": "^6.1.0",
    "react-leaflet": "^2.7.0",
    "react-leaflet-markercluster": "^2.0.0",
    "shortid": "^2.2.15",
    "slugify": "^1.4.5",
    "styled-components": "^5.2.0",
    "styled-media-query": "^2.1.2",
    "swagger-ui": "~3.35.2",
    "swagger-ui-dist": "~3.35.2",
    "webfontloader": "^1.6.28",
    "yup": "^0.29.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "eslint": "^7.11.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.3.0",
    "lint-staged": "^10.4.2",
    "prettier": "^2.1.2"
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "plugins": [
      "import",
      "prettier"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended"
    ],
    "env": {
      "es6": true,
      "browser": true,
      "node": true
    },
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "rules": {
      "prettier/prettier": "error",
      "no-console": "warn",
      "react/prop-types": "off"
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    }
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "eslint"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  }
}
