{
  "name": "sencrop-developer-platform",
  "private": true,
  "description": "The Sencrop Developer Platform website",
  "version": "2.0.0",
  "author": "Paul Bottein <paul.bottein@gmail.com>",
  "keywords": [
    "gatsby"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/sencrop/sencrop-developer-platform"
  },
  "bugs": {
    "url": "https://github.com/sencrop/sencrop-developer-platform"
  },
  "scripts": {
    "build": "gatsby build",
    "develop": "gatsby develop",
    "format": "prettier --write src/**/*.{js,jsx}",
    "lint": "eslint 'src/**/*.js'",
    "prettier": "prettier --write 'src/**/*.js'",
    "start": "npm run develop"
  },
  "dependencies": {
    "@mdx-js/mdx": "^1.0.15",
    "@mdx-js/react": "^1.0.15",
    "@sencrop/ui-components": "^4.6.1",
    "formik": "^2.1.4",
    "gatsby": "^2.19.41",
    "gatsby-background-image": "^0.10.2",
    "gatsby-image": "^2.2.43",
    "gatsby-plugin-catch-links": "^2.1.27",
    "gatsby-plugin-manifest": "^2.2.47",
    "gatsby-plugin-mdx": "^1.0.82",
    "gatsby-plugin-netlify": "^2.1.34",
    "gatsby-plugin-offline": "^3.0.40",
    "gatsby-plugin-react-helmet": "^3.1.23",
    "gatsby-plugin-react-leaflet": "^2.0.12",
    "gatsby-plugin-sharp": "^2.4.12",
    "gatsby-plugin-styled-components": "^3.1.20",
    "gatsby-plugin-web-font-loader": "^1.0.4",
    "gatsby-remark-autolink-headers": "^2.1.25",
    "gatsby-remark-external-links": "0.0.4",
    "gatsby-remark-prismjs": "^3.3.34",
    "gatsby-source-filesystem": "^2.1.54",
    "gatsby-transformer-remark": "^2.6.58",
    "gatsby-transformer-sharp": "^2.3.18",
    "leaflet": "^1.6.0",
    "leaflet.markercluster": "^1.4.1",
    "lodash": "^4.17.15",
    "luxon": "^1.22.0",
    "prismjs": "^1.19.0",
    "prop-types": "^15.7.2",
    "react": "^16.13.0",
    "react-animate-height": "^2.0.20",
    "react-dom": "^16.13.0",
    "react-helmet": "^5.2.1",
    "react-leaflet": "^2.6.3",
    "react-leaflet-markercluster": "^2.0.0-rc3",
    "shortid": "^2.2.15",
    "slugify": "^1.4.0",
    "styled-components": "^5.0.1",
    "styled-media-query": "^2.1.2",
    "swagger-ui": "^3.25.0",
    "swagger-ui-dist": "^3.25.0",
    "webfontloader": "^1.6.28",
    "yup": "^0.27.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "eslint": "^6.8.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^4.2.3",
    "lint-staged": "^10.0.8",
    "prettier": "^1.19.1"
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "plugins": [
      "import",
      "prettier"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended"
    ],
    "env": {
      "es6": true,
      "browser": true
    },
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "rules": {
      "prettier/prettier": "error",
      "no-console": "warn",
      "react/prop-types": "off"
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    }
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "eslint"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  }
}
